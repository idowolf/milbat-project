                    <Image Source="/Assets/חדר מקלחת.jpg" Stretch="Fill"/>
                    <Button Content="החל בסריקה" Margin="0,402,182,0" Foreground="Black" BorderBrush="Black">
                    </Button>
                </Grid>
            </phone:PanoramaItem>
            <phone:PanoramaItem x:Name="sleeping_room" Header="חדר שינה" FlowDirection="RightToLeft" Foreground="Black">
                <Grid>
                    <Image Source="Assets/חדר שינה.jpg" Stretch="Fill"/>
                    <Button Content="החל בסריקה" Margin="0,402,182,0" Foreground="Black" BorderBrush="Black">
                    </Button>
                </Grid>
            </phone:PanoramaItem>
            <phone:PanoramaItem x:Name="shirotim" Header="חדר שירותים" FlowDirection="RightToLeft" Foreground="Black">
                <Grid>
                    <Image Source="Assets/שירותים.jpg" Stretch="Fill"/>
